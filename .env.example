# Environment Variables for Contractor Platform

# Application
NODE_ENV=development
API_VERSION=1.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Admin API Security
ADMIN_API_KEY=your_secure_admin_api_key_here

# Rate Limiting
CORS_ORIGIN=http://localhost:3000

# Buyer API Keys (for webhook authentication)
HOMEADVISOR_API_KEY=your_homeadvisor_api_key
HOMEADVISOR_PARTNER_ID=your_homeadvisor_partner_id

MODERNIZE_TOKEN=your_modernize_bearer_token

ANGI_USERNAME=your_angi_username
ANGI_PASSWORD=your_angi_password

# External Services
RADAR_SECRET_KEY=your_radar_com_secret_key
NEXT_PUBLIC_RADAR_PUBLISHABLE_KEY=your_radar_com_publishable_key

# TrustedForm (Lead Compliance)
TRUSTEDFORM_API_KEY=your_trustedform_api_key_here
TRUSTEDFORM_DOMAIN=your_domain.com

# Logging
LOG_LEVEL=info

# Database (if using database instead of Redis for persistence)
DATABASE_URL=postgresql://username:password@localhost:5432/contractor_platform

# Email/SMS Services (for notifications)
SENDGRID_API_KEY=your_sendgrid_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key